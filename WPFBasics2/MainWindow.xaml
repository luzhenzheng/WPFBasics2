<Window x:Class="WPFBasics2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBasics2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="520">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Width="20" Source="Images/drive.png"/>
        </StackPanel>
        <TreeView x:Name="FolderView">
            <!--for this controller only when the item is of type treeviewitem -->
            <TreeView.Resources>
                <Style TargetType="{x:Type TreeViewItem}"/>
            </TreeView.Resources>
        </TreeView>
    </StackPanel>
</Window>
